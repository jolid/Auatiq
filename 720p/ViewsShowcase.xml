<includes>
	<include name="Showcase">
		<control type="group">
			<visible>Control.IsVisible(572) | Control.IsVisible(573)</visible>
			<include>VisibleFadeEffect</include>
			<posx>0</posx>
			<posy>440</posy>
			<control type="image">
				<animation type="Conditional" condition="Control.HasFocus(60)" reversible="true">
					<effect type="slide" start="0,0" end="0,-50" time="100" />
				</animation>
				<posx>-10</posx>
				<posy>50</posy>
				<width>1310</width>
				<height>400</height>
				<aspectratio>stretch</aspectratio>
				<texture>ContentPanel.png</texture>
			</control>
			<control type="label">
				<posx>341</posx>
				<posy>226</posy>
				<width>600</width>
				<height>25</height>
				<font>font24_title</font>
				<textcolor>white</textcolor>
				<selectedcolor>selected</selectedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$VAR[ShowcaseLabel1]</label>
				<animation effect="slide" start="0,0" end="0,100" delay="0" time="300">WindowClose</animation>
				<animation effect="slide" start="0,100" end="0,0" delay="0" time="300">WindowOpen</animation>
				<scroll>true</scroll>
			</control>
			<control type="label">
				<posx>341</posx>
				<posy>250</posy>
				<width>600</width>
				<height>25</height>
				<font>font13</font>
				<textcolor>grey</textcolor>
				<selectedcolor>selected</selectedcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$VAR[ShowcaseLabel2]</label>
				<animation effect="slide" start="0,0" end="0,100" delay="0" time="300">WindowClose</animation>
				<animation effect="slide" start="0,100" end="0,0" delay="0" time="300">WindowOpen</animation>
				<scroll>true</scroll>
				<visible>!StringCompare(ListItem.Label,..)</visible>
			</control>
			<control type="label">
				<posx>1250</posx>
				<posy>243</posy>
				<width>300</width>
				<height>25</height>
				<font>font13</font>
				<textcolor>grey</textcolor>
				<selectedcolor>selected</selectedcolor>
				<align>right</align>
				<aligny>center</aligny>
				<label>$VAR[ShowcaseLabel3]</label>
				<animation effect="slide" start="0,0" end="0,100" delay="0" time="300">WindowClose</animation>
				<animation effect="slide" start="0,100" end="0,0" delay="0" time="300">WindowOpen</animation>
				<animation effect="slide" start="0,0" end="-110,0" time="0" condition="system.getbool(input.enablemouse)">Conditional</animation>
				<scroll>true</scroll>
				<visible>!StringCompare(ListItem.Label,..)</visible>
			</control>

			<control type="wraplist" id="572">
				<visible>Container.Content(Movies) | Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(MusicVideos)</visible>
				<animation type="WindowOpen" reversible="false">
					<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="500" />
					<effect type="fade" start="0" end="100" time="300" />
				</animation>
				<animation type="WindowClose" reversible="false">
					<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
					<effect type="fade" start="100" end="0" time="300" />
				</animation>
				<posx>0</posx>
				<posy>40</posy>
				<width>1280</width>
				<height>250</height>
				<onleft>727</onleft>
				<onright>727</onright>
				<onup condition="Control.IsVisible(60)">60</onup>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<viewtype label="Showcase">wrap</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<focusposition>4</focusposition>
				<orientation>horizontal</orientation>
				<preloaditems>4</preloaditems>
				<itemlayout condition="Container.Content(Movies) | Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(MusicVideos)" height="200" width="140">
					<control type="image">
						<posx>25</posx>
						<posy>20</posy>
						<width>107</width>
						<height>160</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<fadetime>200</fadetime>
						<texture background="true" diffuse="diffuse-square.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<posx>24</posx>
						<posy>185</posy>
						<width>107</width>
						<height>160</height>
						<aspectratio>stretch</aspectratio>
						<fadetime>200</fadetime>
						<texture background="true" flipy="true" diffuse="diffuse_mirror2.png">$INFO[ListItem.Icon]</texture>
					</control>
				</itemlayout>
				<focusedlayout condition="Container.Content(Movies) | Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(MusicVideos)" height="310" width="140">
					<control type="image">
						<posx>25</posx>
						<posy>20</posy>
						<width>112</width>
						<height>168</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<fadetime>200</fadetime>
						<texture background="true" diffuse="diffuse-square.png">$INFO[ListItem.Icon]</texture>
						<bordertexture border="5">thumbshadow.png</bordertexture>
						<bordersize>7</bordersize>
						<animation reversible="false" effect="zoom" start="-2,16,112,168" end="-60,-125,187,280" time="200">focus</animation>
						<animation reversible="false" effect="zoom" end="-2,16,112,168" start="-60,-125,187,280" time="200">unfocus</animation>
					</control>
					<control type="image">
						<posx>95</posx>
						<posy>105</posy>
						<width>35</width>
						<height>35</height>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.Overlay]</texture>
						<animation type="focus">
							<effect type="fade" start="0" end="100" time="200" />
							<effect type="slide" start="0,0" end="30,10" time="200" />
						</animation>
						<animation type="unfocus">
							<effect type="fade" start="100" end="0" time="200" />
							<effect type="slide" end="0,0" start="30,10" time="200" />
						</animation>
					</control>
				</focusedlayout>
			</control>

			<control type="wraplist" id="573">
				<visible>Container.Content(Episodes)</visible>
				<animation type="WindowOpen" reversible="false">
					<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="500" />
					<effect type="fade" start="0" end="100" time="300" />
				</animation>
				<animation type="WindowClose" reversible="false">
					<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
					<effect type="fade" start="100" end="0" time="300" />
				</animation>
				<posx>0</posx>
				<posy>40</posy>
				<width>1280</width>
				<height>250</height>
				<onleft>727</onleft>
				<onright>727</onright>
				<onup condition="Control.IsVisible(60)">60</onup>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<viewtype label="Showcase">wrap</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<focusposition>2</focusposition>
				<orientation>horizontal</orientation>
				<preloaditems>4</preloaditems>
				<itemlayout height="176" width="280">
					<control type="image">
						<posx>-45</posx>
						<posy>20</posy>
						<width>258</width>
						<height>160</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<fadetime>200</fadetime>
						<texture background="true" diffuse="diffuse-square.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<posx>-45</posx>
						<posy>185</posy>
						<width>258</width>
						<height>160</height>
						<aspectratio>stretch</aspectratio>
						<fadetime>200</fadetime>
						<texture background="true" flipy="true" diffuse="diffuse_mirror2.png">$INFO[ListItem.Icon]</texture>
					</control>
				</itemlayout>
				<focusedlayout height="207" width="280">
					<control type="image">
						<posx>-45</posx>
						<posy>20</posy>
						<width>266</width>
						<height>165</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<fadetime>200</fadetime>
						<texture background="true" diffuse="diffuse-square.png">$INFO[ListItem.Icon]</texture>
						<bordertexture border="5">thumbshadow.png</bordertexture>
						<bordersize>7</bordersize>
						<animation reversible="false" effect="zoom" start="-2,16,266,165" end="-21,-50,340,211" time="200">focus</animation>
						<animation reversible="false" effect="zoom" end="-2,16,266,165" start="-21,-50,340,211" time="200">unfocus</animation>
					</control>			
					<control type="image">
						<posx>166</posx>
						<posy>120</posy>
						<width>35</width>
						<height>35</height>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.Overlay]</texture>
						<animation type="focus">
							<effect type="fade" start="0" end="100" time="200" />
							<effect type="slide" start="0,0" end="30,2" time="200" />
						</animation>
						<animation type="unfocus">
							<effect type="fade" start="100" end="0" time="200" />
							<effect type="slide" end="0,0" start="30,2" time="200" />
						</animation>
					</control>
				</focusedlayout>
			</control>

			<control type="image" id="9522">
				<animation effect="slide" start="0,0" end="-526,-230" time="0" condition="Container.Content(Seasons) | Container.Content(Episodes)">Conditional</animation>
				<include>VisibleFadeEffect</include>
				<posx>536</posx>
				<posy>200</posy>
				<alignx>left</alignx>
				<width>205</width>
				<height>79</height>
				<texture background="true">$VAR[LogoPath]</texture>
				<fadetime>100</fadetime>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<visible>Skin.HasSetting(ExtraArtwork) + Skin.HasSetting(ClearLogo) + [Container.Content(Movies) | Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(Episodes)]</visible>
			</control>

			<control type="scrollbar" id="60">
				<animation effect="fade" start="0" end="100" time="200" condition="Control.HasFocus(60)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="200" condition="!Control.HasFocus(60)">Conditional</animation>
				<posx>200</posx>
				<posy>20</posy>
				<width>880</width>
				<height>25</height>
				<texturesliderbackground border="14,0,14,0">ScrollBarH.png</texturesliderbackground>
				<texturesliderbar border="14,0,14,0">ScrollBarH_bar.png</texturesliderbar>
				<texturesliderbarfocus border="14,0,14,0">ScrollBarH_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
				<onup>9000</onup>
				<ondown>572</ondown>
				<showonepage>false</showonepage>
				<orientation>horizontal</orientation>
			</control>
			
		</control>
	</include>
</includes>	